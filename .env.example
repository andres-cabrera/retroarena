# Retro Arena - Environment Configuration

# ============ SERVER ============
PORT=8080
NODE_ENV=development

# ============ PLAYERS ============
PLAYER_TIMEOUT=300000
CLEANUP_INTERVAL=60000
MIN_WAIT_TIME=500

# ============ MATCHMAKING ============
MAX_WAIT_TIME=120000
SKILL_BASED_MATCHING=false

# ============ STORAGE (para escalado) ============
# Opciones: 'memory', 'mongodb', 'postgresql'
STORAGE_TYPE=memory

# MongoDB (opcional para producción)
MONGODB_URI=mongodb://localhost:27017/retroarena

# PostgreSQL (opcional para producción)
DATABASE_URL=postgresql://user:password@localhost:5432/retroarena

# Redis (opcional para caché)
REDIS_URL=redis://localhost:6379

# ============ WEBSOCKET (para tiempo real) ============
WEBSOCKET_ENABLED=false
WEBSOCKET_PORT=8081

# ============ LOGGING ============
LOG_LEVEL=info
LOG_FORMAT=simple

# ============ RATE LIMITING ============
RATE_LIMIT_ENABLED=false
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# ============ ANALYTICS ============
ANALYTICS_ENABLED=false
ANALYTICS_PROVIDER=none

# ============ CORS ============
CORS_ORIGIN=*

